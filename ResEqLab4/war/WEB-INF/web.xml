<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>Main</servlet-name>
		<servlet-class>es.upm.dit.isst.resource.MainServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateResource</servlet-name>
		<servlet-class>es.upm.dit.isst.resource.CreateResourceServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RemoveResource</servlet-name>
		<servlet-class>es.upm.dit.isst.resource.RemoveResourceServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Email</servlet-name>
		<servlet-class>es.upm.dit.isst.resource.EmailServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Reminder</servlet-name>
		<servlet-class>es.upm.dit.isst.resource.ReminderServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Reminder</servlet-name>
		<url-pattern>/reminder</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Email</servlet-name>
		<url-pattern>/_ah/mail/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RemoveResource</servlet-name>
		<url-pattern>/remove</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateResource</servlet-name>
		<url-pattern>/new</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Main</servlet-name>
		<url-pattern>/main</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>cron</web-resource-name>
			<url-pattern>/reminder</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
